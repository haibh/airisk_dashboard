# AIRM-IP Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/airm_ip?schema=public"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# =============================================================================
# APPLICATION
# =============================================================================
# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Default locale (en or vi)
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage path for evidence files
EVIDENCE_STORAGE_PATH="./storage/evidence"

# Or use cloud storage (optional)
# AWS_S3_BUCKET=""
# AWS_S3_REGION=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Email service for notifications
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM=""

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug logging
# DEBUG="prisma:*"
