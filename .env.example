# AIRM-IP Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/airm_ip?schema=public"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3001"

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# =============================================================================
# APPLICATION
# =============================================================================
# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Default locale (en or vi)
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage path for evidence files
EVIDENCE_STORAGE_PATH="./storage/evidence"

# Or use cloud storage (optional)
# AWS_S3_BUCKET=""
# AWS_S3_REGION=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Email service for notifications and scheduled reports
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM="noreply@airm-ip.com"

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# S3-COMPATIBLE STORAGE (MinIO for dev, AWS S3 for prod)
# =============================================================================
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="airm-evidence"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"

# Maximum file size in bytes (default: 50MB = 52428800)
MAX_FILE_SIZE="52428800"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_AUTHENTICATED_REQUESTS_PER_MINUTE="300"

# =============================================================================
# SCHEDULED JOBS & CRON
# =============================================================================
# Secret for cron endpoint authentication (generate with: openssl rand -base64 32)
# CRON_SECRET="your-cron-secret-here"

# =============================================================================
# VIRUS SCANNING (optional)
# =============================================================================
# Enable ClamAV virus scanning for uploaded files
# CLAMAV_ENABLED="false"
# CLAMAV_HOST="localhost"
# CLAMAV_PORT="3310"

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug logging
# DEBUG="prisma:*"
