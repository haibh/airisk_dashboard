# =============================================================================
# AIRM-IP Docker Environment Variables
# =============================================================================
# Copy to .env.docker and fill in values before running docker compose
# Database/Redis/S3 URLs are set in docker-compose.yml (service networking)
# =============================================================================

# Authentication â€” REQUIRED (generate: openssl rand -base64 32)
NEXTAUTH_SECRET="change-me-generate-a-real-secret"
NEXTAUTH_URL="http://localhost:3000"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# S3 credentials (matches MinIO defaults in docker-compose)
S3_BUCKET="airm-evidence"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"

# Cron secret for scheduled jobs
# CRON_SECRET="change-me"

# Seed database on first startup (set to true for initial setup)
SEED_ON_START="false"

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_AUTHENTICATED_REQUESTS_PER_MINUTE="300"
