# =============================================================================
# Docker Compose Environment Variables
# This file is used by docker-compose.yml for local/staging deployments
# =============================================================================

# =============================================================================
# DATABASE (service name: postgres)
# =============================================================================
DATABASE_URL="postgresql://airm:airm_secret@postgres:5432/airm_ip?schema=public"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="docker-local-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS="http://localhost:3000"
API_VERSION="1.0.0"

# =============================================================================
# REDIS CACHE (service name: redis)
# =============================================================================
REDIS_URL="redis://redis:6379"

# =============================================================================
# S3 STORAGE (service name: minio)
# =============================================================================
S3_ENDPOINT="http://minio:9000"
S3_BUCKET="airm-evidence"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"

# Maximum file size in bytes (50MB)
MAX_FILE_SIZE="52428800"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_AUTHENTICATED_REQUESTS_PER_MINUTE="300"

# =============================================================================
# OPTIONAL: Email Service
# =============================================================================
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM="noreply@airm-ip.com"

# =============================================================================
# OPTIONAL: Scheduled Jobs & Cron
# =============================================================================
# CRON_SECRET="your-cron-secret-here"

# =============================================================================
# OPTIONAL: Virus Scanning
# =============================================================================
# CLAMAV_ENABLED="false"

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================
# Seed database on container start (only for development)
SEED_ON_START="false"

# Node environment
NODE_ENV="production"
